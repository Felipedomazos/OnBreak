                                <Grid Width="200">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="90"/>
                                    </Grid.RowDefinitions>
                                    <Image Height="40"
                                           Grid.Row="0"
                                           VerticalAlignment="Top"
                                           Margin="0,0,10,0"
                                           Source="/SCS/IMG/ListaCli2.png"/>
                                    <TextBlock
                                               Text="Lista de Clientes"
                                               FontSize="15"
                                               VerticalAlignment="Top" 
                                               Margin="0,48,10,0" 
                                               Height="40" 
                                               Width="200" 
                                               HorizontalAlignment="Center" 
                                               FontWeight="SemiBold" 
                                               TextAlignment="Center"/>
                                </Grid>
                            </Button>
                        </ListViewItem>
                    </ListView>
                    <!--#ENDREGION-->
                    <!--#REGION ADMINCONTRATOS-->
                    <ListView Background="Transparent"
                              BorderBrush="Transparent"
