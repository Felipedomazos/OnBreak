                                    Background="Transparent"
                                    BorderBrush="Transparent" Click="Clientes_Click">
                                <Grid Width="200">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="90"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Image Height="40"
                                           Grid.Row="0"
                                           VerticalAlignment="Top"
                                           Margin="0,1,10,0"
                                           Source="/SCS/IMG/adminCli2.png"/>
