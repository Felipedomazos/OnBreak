                              Width="220"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListViewItem Style="{DynamicResource ListViewStyle}" 
                                      Height="90" Width="210"
                                      Margin="0,0,10,0">
                            <Button Style="{DynamicResource BtnListaStyle}" 
                                    x:Name="BtnListCli"
                                    Height="90"
                                    Width="210"
                                    HorizontalAlignment="Left"
                                    Cursor="Hand"
                                    Background="Transparent"
